<h1>Schedule an Appointment</h1>

<%= form_with(model: [@doctor, @appointment], local: true, class: "ui form" ) do |f| %>
  <% f.label :patient%>
  <%= f.select :patient_id, @patients.collect { |u| [u.full_name, u.id] } %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <br >
  <%= f.label :time %>
  <%= f.text_field :time %>
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>
<hr />

<%= link_to "Back", @doctor, class: "ui small blue button" %>


